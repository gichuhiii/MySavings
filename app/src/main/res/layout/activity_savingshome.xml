<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SavingsHome"
    android:background="@color/background"
    android:padding="20dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tv_started_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:text="My Savings"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/heading_green"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newsavingsbtn"
        android:layout_width="297dp"
        android:layout_height="90dp"
        android:background="@drawable/logout_button"
        android:text="New Phone Savings"
        app:icon="@drawable/addsave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_started_title"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/emergencysavingsbtn"
        android:layout_width="297dp"
        android:layout_height="90dp"
        android:background="@drawable/logout_button"
        android:text="Emergency Savings"
        app:icon="@drawable/addsave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_started_title"
        android:layout_marginStart="35dp"
        android:layout_marginTop="120dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bdaysavingsbtn"
        android:layout_width="297dp"
        android:layout_height="90dp"
        android:background="@drawable/logout_button"
        android:text="Mum's Bday Savings"
        app:icon="@drawable/addsave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_started_title"
        android:layout_marginStart="35dp"
        android:layout_marginTop="220dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addsavingsbtn"
        android:layout_width="294dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginTop="-165dp"
        android:width="300dp"
        android:background="@drawable/logout_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Add New Savings Plan"
        android:textAllCaps="false"
        android:textColor="#F8FFFFFF"
        android:textIsSelectable="false"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelbutton"
        android:layout_width="294dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginTop="-110dp"
        android:width="300dp"
        android:background="@drawable/cancel_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#F8FFFFFF"
        android:textIsSelectable="false"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>